@model IEnumerable<Inv_Informatico.BL.Hardware>

@{
    ViewBag.Title = "Hardware";
}

<h2>Hardware</h2>

<p>
    @Html.ActionLink("Nuevo Hardware", "Crear")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>

        <th>@Html.DisplayNameFor(model => model.UrlImagen)</th>

        <th>
            @Html.DisplayNameFor(model => model.Marca)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>

        <td>
            <img src="@item.UrlImagen" alt="@item.Descripcion" style="width:64px; height:auto;" />
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Marca)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.Id }) |
            @Html.ActionLink("Detalles", "Detalles", new { id=item.Id }) |
            @Html.ActionLink("eliminar", "eliminar", new { id=item.Id })
        </td>
    </tr>
}

</table>
